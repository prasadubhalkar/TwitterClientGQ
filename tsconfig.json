{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "removeComments": true,
        "noImplicitAny": true,
        "target": "es5",
        "module": "commonjs",
        "skipLibCheck": true,
        "jsx": "react",
        "lib": [
            "es2015",
            "esnext"
        ],
        "typeRoots": [
            "./node_modules/@types"
        ]
    },
    "include": [
        "./server/**/*",
        "./client/**/*"
    ],
    "tslint": {
        "args": ["--project", "./"]
    },
    "exclude": [
        "node_modules",
        "dist",
        ".git"
    ]
}